ADDER MACRO NUM
ADD AX,NUM
MOV RESULT,AX
ENDM

.MODEL SMALL
.STACK 100H
.DATA

msg db "Enter the number: $"
msg1 db 0AH,0DH,"Summition is: $"
n db ?
M dw ?
result DW ?
.CODE
MAIN PROC

MOV AX,@DATA
MOV DS,AX

LEA DX,msg
MOV AH,09
INT 21H

MOV AH,1
INT 21H
SUB AL,30H
MOV N,AL

XOR CX,CX
XOR AX,AX
XOR BX,BX
MOV CL,N
MOV BX,1




LABEL:

MOV M,BX
ADDER M
INC BX
INC BX
MOV M,BX

LOOP LABEL

LEA DX,msg1
MOV AH,09
INT 21H

OUTPUT:
XOR AX,AX
MOV AX,RESULT
MOV BL,100
DIV BL
MOV BL,AL
MOV BH,AH
XOR AX,AX
MOV AL,BH
MOV BH,10
DIV BH
MOV BH,AL
MOV Cl,AH

MOV DL,BL
ADD DL,30H
MOV AH,2
INT 21H
MOV DL,BH
ADD DL,30H
INT 21H
MOV DL,CL
ADD DL,30H
INT 21H

MAIN ENDP
END MAIN



